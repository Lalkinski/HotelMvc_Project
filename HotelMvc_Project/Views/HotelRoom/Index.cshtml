@model IEnumerable<HotelMvc_Project.Data.Models.HotelRoom>

<style>
  /* Match other pages: dark gradient page background */
  body {
    background: linear-gradient(135deg, #1e293b, #0f172a);
    min-height: 100vh;
    color: #e6eef8;
  }

  /* Scope styles to this view container to avoid touching global site.css */
  .hotelroom-container .card {
    border-radius: 1rem;
    overflow: hidden;
    background: rgba(30,41,59,0.85) !important;
    color: #e6eef8 !important;
    backdrop-filter: blur(6px);
    border: 1px solid rgba(255,255,255,0.04);
    box-shadow: 0 12px 36px rgba(2,6,23,0.6);
    transition: transform .14s ease, box-shadow .18s ease;
  }

  .hotelroom-container .card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 48px rgba(2,6,23,0.7);
  }

  .hotelroom-container .card .card-title {
    color: #f8fafc;
    font-weight: 700;
  }

  .hotelroom-container .text-muted {
    color: rgba(235,245,255,0.65) !important;
  }

  .hotelroom-container .badge {
    background: rgba(255,255,255,0.06);
    color: #e6eef8;
    border: 1px solid rgba(255,255,255,0.04);
  }

  .hotelroom-container .btn-outline-secondary {
    color: #e6eef8;
    border-color: rgba(255,255,255,0.06);
    background: rgba(255,255,255,0.02);
  }

  .hotelroom-container .btn-outline-primary {
    color: #e6eef8;
    border-color: rgba(139,92,246,0.12);
    background: linear-gradient(90deg, rgba(139,92,246,0.06), rgba(110,231,183,0.02));
  }

  .hotelroom-container .btn-outline-primary:hover,
  .hotelroom-container .btn-outline-secondary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.45);
  }

    .card-body {
        background: linear-gradient(135deg, #1e293b, #0f172a);
    }

    h3 {
        color: white;
    }
</style>

<div class="container my-4 hotelroom-container">
    <h3>Hotel Rooms</h3>

    <div class="row g-3">
        @foreach (var room in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Room @room.RoomNumber</h5>

                        <p class="mb-1"><strong>Type:</strong> @room.RoomType</p>
                        <p class="mb-1"><strong>Capacity:</strong> @room.Capacity</p>

                        <p class="mb-2">
                            <strong>Status:</strong>
                            @if (room.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Not available</span>
                            }
                        </p>

                        @if (room.Reservations != null && room.Reservations.Any())
                        {
                            <div class="mb-2">
                                @foreach (var res in room.Reservations)
                                {
                                    <a asp-controller="Guest"
                                       asp-action="Details"
                                       asp-route-id="@res.Guest.Id"
                                       class="btn btn-sm btn-outline-primary me-1 mb-1">
                                        View Guest
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-muted small mb-2">
                                No guests for this room
                            </div>
                        }


                        <a asp-controller="HotelRoom"
                           asp-action="Details"
                           asp-route-id="@room.Id"
                           class="btn btn-sm btn-outline-secondary mb-2">
                            View Room
                        </a>

                    </div>

                </div>
            </div>
        }

    </div>
</div>
