@model IEnumerable<HotelMvc_Project.Data.Models.Guest>

<div class="container my-4">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="m-0">Guests</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First name</th>
                            <th scope="col">Last name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col" class="text-center">Reservations</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">No guests found.</td>
                            </tr>
                        }
                        else
                        {
                            var index = 1;
                            foreach (var g in Model)
                            {
                                var resCount = g.Reservations?.Count() ?? 0;
                                var hasReservations = resCount > 0;

                                <tr>
                                    <td>@index</td>
                                    <td>@g.FirstName</td>
                                    <td>@g.LastName</td>
                                    <td>@g.Email</td>
                                    <td>@g.PhoneNumber</td>
                                    <td class="text-center">@resCount</td>
                                    <td class="text-end">
                                        <a asp-controller="Guest"
                                           asp-action="Details"
                                           asp-route-id="@g.Id"
                                           class="btn btn-sm btn-outline-primary me-1">
                                            Details
                                        </a>

                                        <form asp-controller="Guest"
                                              asp-action="Delete"
                                              asp-route-id="@g.Id"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Delete this guest? This is not allowed if they have reservations.');">
                                            @Html.AntiForgeryToken()

                                            <button type="submit"
                                                    class="btn btn-sm btn-danger"
                                                    @(hasReservations ? "disabled" : null)
                                                    title="@(hasReservations ? "Cannot delete: guest has reservations." : "Delete guest")">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>

                                index++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
