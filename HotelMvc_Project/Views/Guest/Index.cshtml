@model IEnumerable<HotelMvc_Project.Data.Models.Guest>

<style>
  /* Page-specific modern dark background (linear gradient requested) */
  body {
    background: linear-gradient(135deg, #1e293b, #0f172a);
    min-height: 100vh;
    color: #e6eef8;
  }

  .m-0{
      color: #e6eef8 !important;
  }

    th {
        color: white !important;
    }

  /* Card / panel */
  .card {
    border-radius: 14px;
    overflow: hidden;
    background: rgba(16, 24, 40, 0.7);
    backdrop-filter: blur(6px);
    border: 1px solid rgba(255,255,255,0.04);
    box-shadow: 0 10px 36px rgba(2,6,23,0.6);
  }
  .card .card-body { padding: 0; }

  /* Table modern look */
  .table {
    color: #black;
    border-collapse: separate;
  }
  .table thead {
    background: linear-gradient(180deg, rgba(255,255,255,0.04), rgba(255,255,255,0.02));
    color: #black;
  }
  .table thead th {
    font-weight: 700;
    border-bottom: 1px solid rgba(255,255,255,0.04);
  }
  .table tbody tr {
    background: rgba(255,255,255,0.02);
    border-bottom: 1px solid rgba(255,255,255,0.03);
    transition: background .15s ease, transform .12s ease;
  }
  .table-hover tbody tr:hover {
    background: rgba(255,255,255,0.04);
    transform: translateY(-2px);
  }
  .table tbody td, .table tbody th {
    vertical-align: middle;
    padding: 1rem 0.75rem;
    color: black;
  }

  /* Avatar circle */
  .avatar-circle {
    width: 44px;
    height: 44px;
    border-radius: 999px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: .95rem;
    background: linear-gradient(135deg,#06b6d4,#8b5cf6);
    color: #041024;
    box-shadow: 0 6px 18px rgba(11,18,32,0.6);
    flex: 0 0 44px;
  }

  /* Buttons */
  .btn-outline-primary {
    color: blue;
    btn btn-sm btn-outline-primary me-1  
    border-color: rgba(110,231,183,0.12);
    background: transparent;
    transition: transform .12s ease, box-shadow .18s ease;
  }
  .btn-outline-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 28px rgba(139,92,246,0.06);
  }

  .btn-danger {
    transition: transform .12s ease, box-shadow .18s ease;
  }
  .btn-danger:hover { transform: translateY(-2px); }

  /* Empty state */
  .empty-state {
    padding: 3.5rem;
    text-align: center;
    color: #dbeafe;
  }

  .text-muted {
    color: black !important;
  }

  .text-muted.small {
      color: white !important;
  }
</style>

<div class="container my-4">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="m-0">Guests</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="sticky-top">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First name</th>
                            <th scope="col">Last name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col" class="text-center">Reservations</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="py-4 empty-state">
                                    <div class="display-6 mb-2">👥</div>
                                    <div class="fw-semibold mb-1">No guests found.</div>
                                    <div class="text-muted mb-3">Use the button above to add new guests.</div>
                                    <a asp-action="Create" class="btn btn-primary">Add Guest</a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            var index = 1;
                            foreach (var g in Model)
                            {
                                var resCount = g.Reservations?.Count() ?? 0;
                                var hasReservations = resCount > 0;
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="avatar-circle">
                                                @($"{g.FirstName?.FirstOrDefault()}{g.LastName?.FirstOrDefault()}".ToUpper())
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@g.FirstName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="fw-semibold">@g.LastName</td>
                                    <td class="fw-semibold">@g.Email</td>
                                    <td class="fw-semibold">@g.PhoneNumber</td>
                                    <td class="text-center align-middle">@resCount</td>
                                    <td class="text-end align-middle">
                                        <a asp-controller="Guest"
                                           asp-action="Details"
                                           asp-route-id="@g.Id"
                                           class="btn btn-sm btn-outline-primary me-1">
                                            Details
                                        </a>

                                        <form asp-controller="Guest"
                                              asp-action="Delete"
                                              asp-route-id="@g.Id"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Delete this guest? This is not allowed if they have reservations.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-sm btn-danger"
                                                    @(hasReservations ? "disabled" : null)
                                                    title="@(hasReservations ? "Cannot delete: guest has reservations." : "Delete guest")">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    