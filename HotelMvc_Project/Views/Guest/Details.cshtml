@model HotelMvc_Project.Data.Models.Guest

<style>
    /* Page background for this view */
    body {
        background: linear-gradient(135deg, #1e293b, #0f172a);
        min-height: 100vh;
        color: #e6eef8;
    }

    .card-body{
        background: linear-gradient(135deg, #1e293b, #0f172a);
    }

    .guest-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 1.25rem;
    }

    .guest-card {
        background: linear-gradient(135deg, rgba(30,41,59,0.6), rgba(15,23,42,0.6));
        border-radius: 12px;
        padding: 1.25rem;
        box-shadow: 0 6px 18px rgba(15, 23, 42, 0.06);
        transition: transform .14s ease, box-shadow .14s ease;
        border: 1px solid rgba(15,23,42,0.03);
    }

        .guest-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 16px 40px rgba(15,23,42,0.09);
        }

    .reservation-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1rem;
    }

    .reservation-card {
        border-radius: 10px;
        padding: 1rem;
        background: linear-gradient(135deg, rgba(99,102,241,0.06), rgba(6,182,212,0.03));
        transition: transform .12s ease, box-shadow .12s ease;
        border: 1px solid rgba(79,70,229,0.06);
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .reservation-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 28px rgba(79,70,229,0.08);
        }

    .reservation-meta {
        font-size: 0.9rem;
        color: #e6eef8;
        margin-bottom: .75rem;
    }

    .room-badge {
        display: inline-block;
        padding: .25rem .5rem;
        border-radius: .5rem;
        font-weight: 700;
        font-size: .85rem;
        color: #fff;
        background: linear-gradient(90deg,#06b6d4,#4f46e5);
    }

    .muted {
        color: rgba(230,238,248,0.7);
        font-size: .9rem;
    }

    .card-actions {
        display: flex;
        gap: .5rem;
        justify-content: flex-end;
        margin-top: .75rem;
    }

    .m-0{
        color: white !important;
    }

    .mb-3{
        color: white !important;
    }

    .d-block{
        color: white !important;
    }

    strong{
        color: white !important;
    }
</style>

<div class="container my-4">
    <div class="guest-header">
        <div>
            <h2 class="m-0">@Model.FirstName @Model.LastName</h2>
            <div class="muted">Email: @Model.Email &nbsp; · &nbsp; Phone: @(Model.PhoneNumber ?? "—")</div>
            <div class="muted">Total reservations: @Model.Reservations?.Count()</div>
        </div>

        <div class="d-flex align-items-center gap-2">
            <a asp-controller="Guest"
               asp-action="Index"
               class="btn btn-outline-secondary">
                Back to Guests
            </a>

            <a asp-controller="Reservation"
               asp-action="Index"
               class="btn btn-outline-secondary">
                Back to Reservations
            </a>

            <a asp-controller="Reservation"
               asp-action="Create"
               class="btn btn-primary">
                Create Reservation
            </a>
        </div>
    </div>

    <div class="guest-card">
        <h5 class="mb-3">Reservations</h5>

        @if (Model.Reservations == null || !Model.Reservations.Any())
        {
            <div class="text-center muted py-4">No reservations found for this guest.</div>
        }
        else
        {
            <div class="reservation-grid">
                @foreach (var r in Model.Reservations.OrderByDescending(r => r.CheckIn))
                {
                    <div class="reservation-card">
                        <div>
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="room-badge">@((r.HotelRoom != null) ? r.HotelRoom.RoomNumber : "—")</div>
                                    <div class="mt-2">
                                        <strong class="d-block">@((r.HotelRoom != null) ? r.HotelRoom.RoomType : "Room")</strong>
                                        <div class="muted">Capacity: @((r.HotelRoom != null) ? r.HotelRoom.Capacity.ToString() : "—")</div>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <div class="muted">Guests</div>
                                    <div><strong>@r.GuestsCount</strong></div>
                                </div>
                            </div>

                            <hr />

                            <div class="reservation-meta">
                                <div><strong>Check-in:</strong> @r.CheckIn.ToString("yyyy-MM-dd")</div>
                                <div><strong>Check-out:</strong> @r.CheckOut.ToString("yyyy-MM-dd")</div>
                                <div><strong>Nights:</strong> @r.Nights</div>
                            </div>

                            <div class="muted small">
                                Reservation ID: @r.Id
                            </div>
                        </div>

                        <div class="card-actions">
                            @if (r.HotelRoom != null)
                            {
                                <a asp-controller="HotelRoom"
                                   asp-action="Details"
                                   asp-route-id="@r.HotelRoom.Id"
                                   class="btn btn-sm btn-outline-success">
                                    Hotel Room
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-secondary" disabled>
                                    No Room
                                </button>
                            }

                            <a asp-controller="Reservation"
                               asp-action="Index"
                               class="btn btn-sm btn-outline-primary">
                                All Reservations
                            </a>
                        </div>

                    </div>
                }
            </div>
        }
    </div>
</div>
