@model IEnumerable<HotelMvc_Project.Data.Models.Reservation>

@{
    ViewData["Title"] = "Reservations";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
        <div>
            <h2 class="fw-bold mb-1">Reservations</h2>
            <div class="text-muted small">Manage bookings, guests, and dates in one place.</div>
        </div>

        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>
            Create Reservation
        </a>
    </div>

    <!-- Card wrapper -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (Model == null || !Model.Any())
            {
                <div class="p-5 text-center">
                    <div class="display-6 mb-2">📭</div>
                    <h5 class="fw-semibold mb-1">No reservations yet</h5>
                    <div class="text-muted mb-3">Create your first reservation to see it here.</div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Create Reservation
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th class="ps-4">Guest</th>
                                <th class="ps-4">Room</th>
                                <th class="ps-4">Check-in</th>
                                <th class="ps-4">Check-out</th>
                                <th class="text-center">Guests</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var r in Model)
                            {
                                var isUpcoming = DateTime.Today <= r.CheckIn;
                                var isActive = DateTime.Today >= r.CheckIn && DateTime.Today <= r.CheckOut;
                                var statusText = isActive ? "Active" : (isUpcoming ? "Upcoming" : "Past");
                                var statusClass = isActive ? "bg-success" : (isUpcoming ? "bg-primary" : "bg-secondary");

                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="avatar-circle">
                                                @($"{r.Guest.FirstName?.FirstOrDefault()}{r.Guest.LastName?.FirstOrDefault()}".ToUpper())
                                            </div>
                                            <div>
                                                <div class="fw-semibold">
                                                    @r.Guest.FirstName @r.Guest.LastName
                                                </div>
                                                <div class="small text-muted">
                                                    <span class="badge @statusClass">@statusText</span>
                                                </div>
                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="fw-semibold">
                                            @r.HotelRoom.RoomNumber
                                        </div>
                                        <div class="small text-muted">
                                            @r.HotelRoom.RoomType
                                        </div>
                                    </td>

                                    <td>
                                        <span class="fw-semibold">@r.CheckIn.ToString("dd MMM yyyy")</span>
                                        <div class="small text-muted">@r.CheckIn.ToString("dddd")</div>
                                    </td>

                                    <td>
                                        <span class="fw-semibold">@r.CheckOut.ToString("dd MMM yyyy")</span>
                                        <div class="small text-muted">@r.CheckOut.ToString("dddd")</div>
                                    </td>

                                    <td class="text-center">
                                        <span class="badge rounded-pill bg-dark-subtle text-dark px-3 py-2">
                                            <i class="bi bi-people-fill me-1"></i>@r.GuestsCount
                                        </span>
                                    </td>

                                    <td class="text-end pe-4">
                                        <div class="d-inline-flex gap-2">
                                            <a asp-controller="Guest"
                                               asp-action="Details"
                                               asp-route-id="@r.Guest.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-person-lines-fill me-1"></i>Details
                                            </a>

                                            <form asp-action="Delete"
                                                  asp-route-id="@r.Id"
                                                  method="post"
                                                  onsubmit="return confirm('Are you sure you want to delete this reservation?');"
                                                  class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash3 me-1"></i>Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Make elements using class "ps-4" white */
    .ps-4 { 
        color: #ffffff !important;
    }

    .fw-semibold{
        color: black !important;
    }
    /* Small clean avatar circle */
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: .9rem;
        background: #38bdf8;
        color: #0d6efd;
        border: 1px solid rgba(13,110,253,.20);
        flex: 0 0 40px;
    }

    /* Make header a bit cleaner */
    thead.table-light th {
        font-weight: 700;
        color: #334155;
        border-bottom: 1px solid rgba(15,23,42,.08);
    }


    /* Card look */
    .card {
        border-radius: 1rem;
        overflow: hidden;
    }

    .btn-lg {
        border-radius: .9rem;
    }

    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        min-height: 100vh;
    }

    .card {
        background: #1e293b;
        color: #f1f5f9;
    }

    .table {
        color: #f1f5f9;
    }

        .table thead {
            background-color: #334155;
            color: #f8fafc;
        }

    .text-muted {
        color: #cbd5e1 !important;
    }

    .card {
        background: rgba(30, 41, 59, 0.85);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.05);
    }

    
    .ps4{
        color: white;
    } 
    
    
</style>