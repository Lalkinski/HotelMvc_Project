@model IEnumerable<HotelMvc_Project.Data.Models.Reservation>

<h2>Reservations</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Reservation</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Guest</th>
            <th>Room</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Guests</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Guest.FirstName @r.Guest.LastName</td>
                <td>@r.HotelRoom.RoomNumber (@r.HotelRoom.RoomType)</td>
                <td>@r.CheckIn.ToShortDateString()</td>
                <td>@r.CheckOut.ToShortDateString()</td>
                <td>@r.GuestsCount</td>
                <td class="d-flex gap-1">
                    <a asp-controller="Guest"
                       asp-action="Details"
                       asp-route-id="@r.Guest.Id"
                       class="btn btn-sm btn-outline-primary">
                        Details
                    </a>

                    <form asp-action="Delete"
                          asp-route-id="@r.Id"
                          method="post"
                          onsubmit="return confirm('Are you sure you want to delete this reservation?');"
                          style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
