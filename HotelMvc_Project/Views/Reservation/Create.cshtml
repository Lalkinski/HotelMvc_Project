@model HotelMvc_Project.ViewModels.CreateReservationViewModel

<style>
    .reservation-card {
        max-width: 920px;
        margin: 1.5rem auto;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 20px rgba(15, 23, 42, 0.08);
    }

    .reservation-card .card-header {
        background: linear-gradient(135deg, #4f46e5 0%, #06b6d4 100%);
        color: #fff;
        padding: 1.1rem 1.5rem;
    }

    .section-header {
        display: inline-block;
        background: linear-gradient(90deg, rgba(79,70,229,0.08), rgba(6,182,212,0.04));
        color: #0f172a;
        padding: 0.45rem 0.85rem;
        border-radius: 8px;
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .reservation-card .card-body {
        background: #ffffff;
        padding: 1.5rem;
    }

    .reservation-card .form-label {
        color: #0f172a;
        font-weight: 600;
    }

    .reservation-card .form-control {
        border-radius: 8px;
        border: 1px solid #e6edf3;
        box-shadow: none;
        transition: box-shadow .15s, border-color .15s;
    }

    .reservation-card .form-control:focus {
        border-color: #06b6d4;
        box-shadow: 0 0 0 0.15rem rgba(6,182,212,0.12);
    }

    .hr-accent {
        border: 0;
        border-top: 1px dashed rgba(15,23,42,0.06);
        margin: 1rem 0 1rem 0;
    }

    .btn-save {
        background: linear-gradient(90deg, #06b6d4, #4f46e5);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 0.55rem 1.1rem;
        box-shadow: 0 6px 18px rgba(79,70,229,0.12);
    }

    .btn-save:hover {
        transform: translateY(-1px);
    }
</style>

<div class="reservation-card card">
    <div class="card-header">
        <h2 class="mb-0">Create Reservation</h2>
    </div>

    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <h4 class="section-header">Guest</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="GuestFirstName" class="form-label">First Name</label>
                    <input asp-for="GuestFirstName" class="form-control" />
                    <span asp-validation-for="GuestFirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="GuestLastName" class="form-label">Last Name</label>
                    <input asp-for="GuestLastName" class="form-control" />
                    <span asp-validation-for="GuestLastName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="GuestEmail" class="form-label">Email</label>
                    <input asp-for="GuestEmail" class="form-control" />
                    <span asp-validation-for="GuestEmail" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="GuestPhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="GuestPhoneNumber" class="form-control" />
                    <span asp-validation-for="GuestPhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <hr class="hr-accent" />

            <h4 class="section-header">Room</h4>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="RoomNumber" class="form-label"></label>
                    <input asp-for="RoomNumber" class="form-control" />
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="RoomType" class="form-label">Room Type</label>
                    <select asp-for="RoomType" class="form-control">
                        <option value="">Select...</option>
                        <option value="Standart">Standart</option>
                        <option value="VIP">VIP</option>
                        <option value="Exclusive">Exclusive</option>
                    </select>
                    <span asp-validation-for="RoomType" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="RoomCapacity" class="form-label"></label>
                    <input asp-for="RoomCapacity" class="form-control" />
                    <span asp-validation-for="RoomCapacity" class="text-danger"></span>
                </div>
            </div>

            <hr class="hr-accent" />

            <h4 class="section-header">Reservation</h4>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="CheckIn" class="form-label"></label>
                    <input asp-for="CheckIn" type="date" class="form-control" />
                    <span asp-validation-for="CheckIn" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="CheckOut" class="form-label"></label>
                    <input asp-for="CheckOut" type="date" class="form-control" />
                    <span asp-validation-for="CheckOut" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="GuestsCount" class="form-label"></label>
                    <input asp-for="GuestsCount" class="form-control" />
                    <span asp-validation-for="GuestsCount" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <button type="submit" class="btn btn-save btn-lg">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const roomTypeSelect = document.querySelector('[name="RoomType"]');
        const capacityInput = document.querySelector('[name="RoomCapacity"]');
        const guestsInput = document.querySelector('[name="GuestsCount"]');

        if (!roomTypeSelect || !capacityInput || !guestsInput) return;

        function setCapacity(type) {
            switch (type) {
                case "Standart": return 4;
                case "VIP": return 5;
                case "Exclusive": return 6;
                default: return null;
            }
        }

        roomTypeSelect.addEventListener("change", function () {
            const cap = setCapacity(this.value);

            if (cap !== null) {
                capacityInput.value = cap;
                guestsInput.max = cap;

                if (guestsInput.value > cap) {
                    guestsInput.value = cap;
                }
            } else {
                capacityInput.value = "";
                guestsInput.removeAttribute("max");
            }
        });
    });
</script>


